<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    tools:context="com.example.test.mobilesafe.activity.PermissionDetailActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_apd_icon"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_apd_appName"
            android:textAppearance="@android:style/TextAppearance.Large"
            tools:text="adfasdf"
            android:textColor="@color/textcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="权限："
        android:textColor="@color/textcolor"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp">

        <ScrollView
            android:id="@+id/sv_apd_permission"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_apd_progress"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="正在加载，请稍候"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@color/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_apd_uninstall"
            android:text="卸载"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_apd_forceStop"
            android:text="强制停止"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
